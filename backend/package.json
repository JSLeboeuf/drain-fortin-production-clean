    "lint:fix": "eslint src --ext .ts,.js --fix",
    "typecheck": "tsc --noEmit"
  },
  "main": "dist/server.js",
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
