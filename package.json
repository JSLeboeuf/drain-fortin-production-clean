{
  "type": "module",
  "scripts": {
    "test": "npm --prefix backend test",
    "test:coverage": "npm --prefix backend run test:coverage",
    "validate": "npm --prefix backend run test:coverage",
    "vapi:inspect": "node scripts/vapi-inspect.js",
    "vapi:assistants": "node scripts/vapi-inspect.js",
    "outlook:deploy": "node scripts/deploy-outlook.js",
    "outlook:test": "node scripts/test-outlook.js",
    "outlook:auth": "node scripts/outlook-auth.js",
    "outlook:sync": "node scripts/outlook-sync.js",
    "outlook:monitor": "node scripts/outlook-monitor.js",
    "test:production": "node tests/run-all-tests.js --production",
    "test:development": "node tests/run-all-tests.js",
    "test:security": "node tests/run-all-tests.js --suite=security",
    "test:performance": "node tests/run-all-tests.js --suite=performance",
    "test:integration": "node tests/run-all-tests.js --suite=comprehensive",
    "test:edge-cases": "node tests/run-all-tests.js --suite=edge",
    "test:all": "node tests/run-all-tests.js --production --verbose",
    "test:quick": "npx vitest run tests/comprehensive-test-suite.js",
    "test:stress": "ENABLE_STRESS_TESTS=true node tests/run-all-tests.js --suite=edge",
    "test:ci": "node tests/run-all-tests.js --production --bail",
    "test:debug": "LOG_LEVEL=debug node tests/run-all-tests.js --verbose",
    "test:parallel": "node tests/run-all-tests.js --parallel"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "@supabase/supabase-js": "^2.57.2",
    "axios": "^1.11.0",
    "colors": "^1.4.0",
    "dotenv": "^17.2.2",
    "mime-types": "^3.0.1",
    "node-fetch": "~3.3.2",
    "playwright": "^1.55.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "fast-glob": "^3.3.3",
    "mammoth": "^1.10.0",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^5.4.149",
    "vitest": "^2.1.5"
  }
}